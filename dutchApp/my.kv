WindowManager:
    MainWindow:
    QuestionWindow:
    AnswerWindow:

<MainWindow>:
    name: 'start'
    pyNumber: kvNumber

    GridLayout:
        cols:1
        size: root.width - 100, root.height - 200
        

        Label:
            font_size: 30
            text: 'How many questions do you want to have?'

        TextInput:
            id: kvNumber
            multiline: False

        Button:
            font_size: 30
            text: 'Start the Quiz'
            on_release:
                root.btn()
                app.root.current= 'question'
                root.manager.transition.direction= 'down'
                

<QuestionWindow>:
    name: 'question'

    GridLayout:
        cols:1
        size: root.width, root.height
        pyPolish: kvPolish
        pyDutch1: kvDutch1
        pyDutch2: kvDutch2
        pyDutch3: kvDutch3
        pyDutch4: kvDutch4


        Label:
            id: kvPolish
            font_size: 20
            text: 'polish word'

        GridLayout:
            cols:2

            Button:
                id: kvDutch1
                font_size: 20
                text: 'first dutch word'
                on_release:
                    app.root.current= 'answer'
                    root.manager.transition.direction= 'right'

            Button:
                id: kvDutch2
                font_size: 20
                text: 'second dutch word'
                on_release:
                    app.root.current= 'answer'
                    root.manager.transition.direction= 'right'

            Button:
                id: kvDutch3
                font_size: 20
                text: 'third dutch word'
                on_release:
                    app.root.current= 'answer'
                    root.manager.transition.direction= 'right'

            Button:
                id: kvDutch4
                font_size: 20
                text: 'fourth dutch word'
                on_release:
                    app.root.current= 'answer'
                    root.manager.transition.direction= 'right'


        Button:
            text: 'Go Back'
            on_release:
                app.root.current= 'start'
                root.manager.transition.direction= 'up'


<AnswerWindow>:
    name: 'answer'
    
    GridLayout:
        cols:1

        Label:
            font_size: 20
            text: 'On to the next one!'

        Button:
            font_size: 20
            text: 'Next question'
            on_release:
                app.root.current= 'question'
                root.manager.transition.direction= 'right'

        Button:
            font_size: 20
            text: 'Start menu'
            on_release:
                app.root.current= 'start'
                root.manager.transition.direction= 'up'
