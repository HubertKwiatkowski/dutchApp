WindowManager:
    MainWindow:
    QuizWindow:
    LearningWindow:


<MainWindow>:
    name: 'start'
    font_size: 30


    GridLayout:
        cols:2

        Button:
            text: 'Start learning'
            on_release:
                app.root.current= 'learning'
                root.manager.transition.direction= 'down'


        Button:
            text: 'Start the Quiz'
            on_release:
                app.root.current= 'quiz'
                root.manager.transition.direction= 'down'
                

<QuizWindow>:
    name: 'quiz'

    GridLayout:
        cols:1
        size: root.width, root.height
  
        Label:
            font_size: 20
            text: root.Polish

        GridLayout:
            cols:2

            Button:
                font_size: 20
                text: root.Dutch1
                on_release:
                    root.checkAnswer(1)
                    root.generateQuestion()

            Button:
                font_size: 20
                text: root.Dutch2
                on_release:
                    root.checkAnswer(2)
                    root.generateQuestion()

            Button:
                font_size: 20
                text: root.Dutch3
                on_release:
                    root.checkAnswer(3)
                    root.generateQuestion()

            Button:
                font_size: 20
                text: root.Dutch4
                on_release:
                    root.checkAnswer(4)
                    root.generateQuestion()

        GridLayout:
            cols:2

            Button:
                font_size: 20
                text: 'Go Back'
                on_release:
                    root.reset()
                    app.root.current= 'start'
                    root.manager.transition.direction= 'up'

            Button:
                font_size: 20
                text: 'Next question'
                on_release:
                    root.generateQuestion()


<LearningWindow>:
    name: 'learning'

    GridLayout:
        clos: 1

            Label:
                font_size: 20
                text: Polish

            Label:
                font_size: 20
                text: Dutch
            
            Button:
                font_size: 20
                text: 'Next word'
                on_release:
                    root.generateWord()