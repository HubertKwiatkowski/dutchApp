WindowManager:
    MainWindow:
    QuestionWindow:


<MainWindow>:
    name: 'start'
    pyNumber: kvNumber

    GridLayout:
        cols:1
        size: root.width - 100, root.height - 200
        
        Label:
            font_size: 30
            text: 'How many questions do you want to have?'

        TextInput:
            id: kvNumber
            multiline: False

        Button:
            font_size: 30
            text: 'Start the Quiz'
            on_release:
                root.btn()
                app.root.current= 'question'
                root.manager.transition.direction= 'down'
                

<QuestionWindow>:
    name: 'question'

    GridLayout:
        cols:1
        size: root.width, root.height
  
        Label:
            font_size: 20
            text: root.Polish

        GridLayout:
            cols:2

            Button:
                font_size: 20
                text: root.Dutch1
                on_release:
                    root.checkAnswer(1)
                    root.generateQuestion()

            Button:
                font_size: 20
                text: root.Dutch2
                on_release:
                    root.checkAnswer(2)
                    root.generateQuestion()

            Button:
                font_size: 20
                text: root.Dutch3
                on_release:
                    root.checkAnswer(3)
                    root.generateQuestion()

            Button:
                font_size: 20
                text: root.Dutch4
                on_release:
                    root.checkAnswer(4)
                    root.generateQuestion()

        GridLayout:
            cols:2

            Button:
                font_size: 20
                text: 'Go Back'
                on_release:
                    root.reset()
                    app.root.current= 'start'
                    root.manager.transition.direction= 'up'

            Button:
                font_size: 20
                text: 'Next question'
                on_release:
                    root.generateQuestion()