<MyGrid>

    pyNumber: kvNumber

    GridLayout:
        cols:1
        size: root.width - 200, root.height -200
        pos: 100, 100


        Label:
            text: 'How many questions would you like to answer?'

        TextInput:
            id: kvNumber
            multiline: False

        Button:
            text: 'Run the Quiz'
            on_press:root.btn()